<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
  default-lazy-init="true">

  <!--
    In order to support Cloudfoundry auto-reconfiguration when deployed to the cloud
  -->
  <import resource="classpath*:META-INF/cloud/cloudfoundry-auto-reconfiguration-context.xml"/>

  <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
    <property name="jndiName" value="java:comp/env/jdbc/hrsampleDS"/>
  </bean>

</beans>
