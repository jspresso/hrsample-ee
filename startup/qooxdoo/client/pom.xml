<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jspresso.hrsample</groupId>
    <artifactId>hrsample-ext-startup-qooxdoo</artifactId>
    <version>4.3-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <artifactId>hrsample-ext-startup-qooxdoo-client</artifactId>
  <packaging>jar</packaging>
  <name>Jspresso HR Sample Application - Extension - Startup - Qooxdoo - Client</name>

  <dependencies>
    <dependency>
      <groupId>org.qooxdoo</groupId>
      <artifactId>qooxdoo-sdk</artifactId>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.jspresso.framework</groupId>
      <artifactId>jspresso-ext-qooxdoo</artifactId>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.jspresso.framework</groupId>
      <artifactId>jspresso-ext-qooxdoo-theme</artifactId>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>target/web</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-qooxdoo-sdk</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>qooxdoo-sdk</includeArtifactIds>
              <outputDirectory>${project.build.directory}/qooxdoo-sdk</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>unpack-jspresso-qooxdoo</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}</outputDirectory>
              <includeGroupIds>org.jspresso.framework</includeGroupIds>
              <useSubDirectoryPerArtifact>true</useSubDirectoryPerArtifact>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>unpack-qooxdoo-contribs</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}</outputDirectory>
              <includeGroupIds>org.qooxdoo</includeGroupIds>
              <excludeArtifactIds>qooxdoo-sdk</excludeArtifactIds>
              <useSubDirectoryPerArtifact>true</useSubDirectoryPerArtifact>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>compile-qooxdoo</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>prepare-package</phase>
          </execution>
        </executions>
        <configuration>
          <executable>python</executable>
          <workingDirectory>src/main/py</workingDirectory>
          <arguments>
            <argument>${project.build.directory}/qooxdoo-sdk/tool/bin/generator.py</argument>
            <argument>source,build,source-mobile,build-mobile</argument>
          </arguments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
      	  <execution>
      	    <id>web-debug</id>
      	    <goals>
      	      <goal>run</goal>
      	    </goals>
      	    <phase>prepare-package</phase>
            <configuration>
              <target>
                <property name="web-debug.dir" value="${project.build.directory}/web-debug" />
                <mkdir dir="${web-debug.dir}" />
                <replace dir="${web-debug.dir}" token="../../../../target" value="file:///${project.build.directory}">
                  <include name="**/*.js" />
                </replace>
                <replace dir="${web-debug.dir}" token="../../../target" value="file:///${project.build.directory}">
                  <include name="**/*.js" />
                </replace>
                <replace dir="${web-debug.dir}" token="../../" value="file:///${basedir}/src/main/">
                  <include name="**/*.js" />
                </replace>
                <replace dir="${web-debug.dir}" token="../" value="file:///${basedir}/src/main/">
                  <include name="**/*.js" />
                </replace>
                <replace dir="${web-debug.dir}" token="\" value="/">
                  <include name="**/*.js" />
                </replace>
                <replace dir="${web-debug.dir}" token="//(" value="\/(">
                  <include name="**/*.js" />
                </replace>
                <delete dir="${project.build.directory}/antrun" />
              </target>
            </configuration>
      	  </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>package webapp resources</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
